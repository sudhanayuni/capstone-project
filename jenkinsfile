
node {

stage("Git Clone"){

        git credentialsId: 'GIT_HUB_CREDENTIAL', url: 'https://github.com/sudhanayuni/capstone-project'
    }
stage("Docker build"){
    sh 'sudo docker version'
    sh 'sudo docker build -t nayunisudha7898/my_apache2 .'
    sh 'sudo docker images list'
        }
stage("Docker Login"){
        withCredentials([string(credentialsId: 'DOCKER_HUB_PASSWORD', variable: 'PASSWORD')]) {
            sh 'sudo docker login -u bikram2das -p $PASSWORD'
        }
    }
stage("Push Image to Docker Hub"){
        sh 'sudo docker push  bikram2das/capstone-project1:capstone'
    }
    
stage('K8S Deploy'){
       
                kubernetesDeploy(
    
                    configs: 'deployment.yaml',
                    kubeconfigId: 'K8S',
                    enableConfigSubstitution: true
                    
        )
                
        }
}
      
